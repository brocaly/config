# General
super + Return
	kitty
super + n
	simplenote
super + c
	/usr/bin/pulseaudio-ctl down 2 ; \
	~/.config/scripts/sbu.sh
super + v
	/usr/bin/pulseaudio-ctl up 2 ; \
	~/.config/scripts/sbu.sh
super + q
	kitty -e qalc
super + r
	kitty -e ranger
super + w
	brave
super + <
	mpc next
super + >
	mpc prev
super + shift + b
	nautilus
super + shift + g
	glava --force-mod=radial
super + shift + f
	freecad
super + shift + n
	kitty -e ncmpcpp
super + shift + h
	kitty -e htop
super + shift + l
	slock
super + shift + o
	libreoffice
super + shift + r
	killall sxhkd & ; \
	sxhkd </dev/null &>/dev/null &
super + shift + s
	scrot -p
super + alt + c
	code
super + shift + control + alt + p
	slock & ; \
	systemctl suspend

# mpc
super + shift + p
	mpc toggle
super + shift + odiaeresis
	mpc prev
super + shift + adiaeresis
	mpc next

# Games
super + s
	steam -console
