# General
super + Return
	kitty
super + n
	simplenote
super + c
	/usr/bin/pulseaudio-ctl down 2 ; \
	~/.config/scripts/sbu.sh
super + g
	kitty -e ddgr
super + v
	/usr/bin/pulseaudio-ctl up 2 ; \
	~/.config/scripts/sbu.sh
super + r
	kitty -e ranger
super + w
	brave
super + shift + b
	blender
super + shift + m
	kitty -e qalc
super + shift + e
	unreal4
super + shift + f
	freecad
super + shift + g
	glava --force-mod=radial
super + shift + i
	brave --incognito
super + shift + n
	kitty -e ncmpcpp
super + shift + h
	kitty -e htop
super + shift + l
	slock
super + shift + o
	libreoffice
super + shift + r
	killall sxhkd & ; \
	sxhkd </dev/null &>/dev/null &
super + shift + s
	scrot -p
super + shift + u
	unityhub

super + alt + c
	code

super + shift + control + alt + p
	slock & ; \
	systemctl suspend

# mpc
super + shift + p
	mpc toggle
super + shift + j
	mpc prev
super + shift + k
	mpc next
super + shift + c
	mpc volume -5
super + shift + v
	mpc volume +5

