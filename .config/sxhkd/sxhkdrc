# General
super + Return
	kitty
super + n
	simplenote
super + c
	/usr/bin/pulseaudio-ctl down ; \
	~/.config/scripts/sbu.sh
super + v
	/usr/bin/pulseaudio-ctl up ; \
	~/.config/scripts/sbu.sh
super + w
	brave
super + shift + l
	i3lock
super + shift + s
	brave </dev/null &>/dev/null & ; \
	discord </dev/null &>/dev/null & ; \
	steam </dev/null &>/dev/null &
super + shift + r + h
	killall sxhkd & ; sxhkd
super + shift + õ
	killall screenkey
super + shift + ü
	screenkey </dev/null &>/dev/null &

# mpc
super + shift + p
	mpc toggle

